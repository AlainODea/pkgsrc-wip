all: $(FILES)

clean:
	-rm *.cat8

install:
	-mkdir -p @MAN_DIR@/man8
	-mkdir -p @MAN_DIR@/cat8
	cp *.8 @MAN_DIR@/man8
	cp *.cat8 @MAN_DIR@/cat8

